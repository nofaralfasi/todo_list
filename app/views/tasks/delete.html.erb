<%= link_to('back to list', list_path(cookies[:list_id])) %>

<h2>Delete Task</h2>

<%= form_for(@task, :method => 'delete') do |f| %>
  <p>Are you sure you want to permanently delete this task?</p>

  <p><%= @task.title %></p>

  <div class="task-buttons">
    <%= f.submit('Delete Task') %>
  </div>
<% end %>