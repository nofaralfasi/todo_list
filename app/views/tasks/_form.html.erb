<%= error_message_for(f.object) %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
</div>

<div class="form-group">
  <%= f.label :due_date %>
  <%= f.text_field :due_date, class: "form-control", placeholder: "Enter due date" %>
</div>

<div class="form-group">
  <%= f.label :priority %>
  <%= f.text_field :priority, class: "form-control", placeholder: "Enter priority" %>
</div>

<div class="form-group">
  <%= f.label :status %><br/>
  <%= f.radio_button :status, false, :checked => true %>
  <%= f.label :status, "To Do", :value => "false" %> &nbsp;
  <%= f.radio_button :status, true %>
  <%= f.label :status, "Done", :value => "true" %>
</div>

<div class="form-group">
  <%= f.label :label_id %><br/>
  <% unless @labels.empty? %>
    <%= f.select(:label_id, @labels.map { |l| [l.title, l.id] }) %>
  <% else %>
    <%= link_to('Create new label', new_label_path) %>
  <% end %>
</div>
