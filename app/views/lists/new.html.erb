<div class='container'>
  <h1>Create List</h1>

  <div class='lists new'>
    <%= form_for @list, url: lists_path, method: 'post' do |f| %>

      <% @list.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>

      <%= render partial: 'form', locals: { f: f } %>

      <%= f.submit 'Create List', class: 'btn btn-primary' %>
    <% end %>
  </div>

</div>
