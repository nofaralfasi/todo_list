<div class="container">
  <h2><%= @list.title %></h2>

  <% unless @list.tasks.empty? %>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th colspan="3">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @list.tasks.each do |task| %>
        <% if task.persisted? %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.status ? 'Done' : 'To Do' %></td>
            <td><%= link_to 'Show', list_task_path(task.list, task) %></td>
            <td><%= link_to 'Edit', edit_list_task_path(task.list, task) %></td>
            <td><%= link_to 'Delete', [task.list, task], method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  <% end %>
  <br/>

  <div class="my-2 my-lg-0">
    <%= link_to 'Create new task', new_list_task_path(@list), :class => 'action new btn btn-outline-primary my-2 my-sm-0' %>
  </div>
</div>
