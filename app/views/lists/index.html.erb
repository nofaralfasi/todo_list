<div class="container">
  <p><%= link_to 'Add a new list', new_list_path, :class => 'action new' %></p>

  <h1>To-Do Lists:</h1><br/>

  <% unless @lists.empty? %>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Title</th>
        <th colspan="3">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.title %></td>
          <td><%= link_to 'Show', list_path(list) %></td>
          <td><%= link_to 'Edit', edit_list_path(list) %></td>
          <td><%= link_to "Delete", list, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

</div>
